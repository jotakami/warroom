    <Text class="tracker" alignment="MiddleLeft" />
    <Text class="phase" fontSize="22" outline="black" outlineSize="1 1" />
    <Text class="step" fontSize="18" />
    <Text class="nation" fontSize="16" fontStyle="Bold" />
